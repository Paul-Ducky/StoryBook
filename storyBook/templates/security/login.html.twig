{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class=" background text-light">
        <div class="paddingForm">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div>
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                </div>
                <div class="form">
                    <h1 class="name">Sign in</h1>
                    <div class="col-md-4 mb-3">
                        <label for="inputUsername">Username</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                               class=" inputOutline" required
                               autofocus>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class=" inputOutline" required>
                    </div>
                    <div class="col-md-4 mb-3"><input type="hidden" name="_csrf_token"
                                                      value="{{ csrf_token('authenticate') }}"
                        ></div>

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}

                    <button class="btn btn-outline-secondary checkbox button" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
