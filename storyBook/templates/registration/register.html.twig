{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class=" background text-light">
        <div class="paddingForm">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <div>
                <div>
                    {{ form_start(registrationForm,{ 'attr': {'class': 'form'} }) }}
                    <h1 class="name">Register</h1>
                    <div class="col-md-4 mb-3 ">
                        {{ form_label(registrationForm.username) }}
                        {{ form_widget(registrationForm.username,{ 'attr': {'class': 'inputOutline'} }) }}
                    </div>
                    <div class="col-md-4 mb-3 ">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email,{ 'attr': {'class': 'inputOutline'} }) }}
                    </div>
                    <div class="col-md-4 mb-3 ">
                        {{ form_row(registrationForm.plainPassword, {'label' : 'Password','attr': {'class': 'inputOutline'} }) }}

                    </div>
                    <div class="form-check">
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms,{ 'attr': {'class': 'checkbox'} }) }}
                    </div>
                    <button type="submit" class="checkbox button">Register</button>

                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
